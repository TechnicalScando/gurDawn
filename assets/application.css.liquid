.hero-section {
    display: flex;
    overflow: hidden;
    flex-direction: column;

    justify-content: center;

    position: relative;
    z-index: 1;



    min-width: 300px;

    
}

.hero-info {
    position: absolute;
    padding: 30px;

    max-width: 500px;

    align-self: center;

    font-family: "Cabin", sans-serif;

    margin-top: 35px;

    color: #FFFFFF;

    text-shadow: 1px 1px 0px #000000;
}



.hero-button {
    width: 120px;
    height: 45px;

    background: #060314;
    border-radius: 5px;
    
    filter: drop-shadow(1px 1px 4px rgba(255, 255, 255, 0.25));

    font-family: "Cabin", sans-serif;

    color: #FFFFFF;
}

.hero-title {
    font-size: 40px;

    margin: 0px;
}


.image_item {
  width: 35%;
  border-radius: 50%;

  box-sizing: border-box;

  max-width: 170px;

  padding: 5px;

  

}

.flex-image{
    width: 100%;
}

.image-menu-container {
    display: flex;
    flex-wrap: wrap;

    justify-content: center;
    justify-content: space-around;

    font-family: "Cabin", sans-serif;
    text-align: center;
}

.image-menu-title {
    font-size: 15px;
    margin: 0px;
}

.image-menu-description{
    font-size: 10px;
    margin: 0;
}

.menu-image{
    width: 100%;

    height: 170px;
    width: 120px;

    margin: 5px;
}

.footer-container {
    display: flex;
    flex-direction: column;

    font-family: "Cabin", sans-serif;

    align-items: center;

    padding: 10px;
}

.footer-btn {
    width: 160px;
    height: 45px;
}

.footer-btn-container {
    display: flex;

    flex-direction: column;

    align-items: center;
}

.footer-links {
    text-align: center;
}

.footer-blurb{
    max-width: 320px;
    text-align: center;
}

.footer-address-container{
    text-align: center;
}

.footer-link {
    max-width: 90px;

    text-align: center;
}

.footer-link-row{
    display: flex;
    flex-wrap: wrap;

    width: 100%;

    justify-content: center;
}

.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f1f1f1;
    min-width: 160px;
    z-index: 1;
}

.dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}



.dropdown-content a:hover {background-color: #ddd;}

.dropdown:hover .dropdown-content {display: block}

.dropdown:hover .dropbtn {background-color: #3e8e41;}

.header {
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.dropbtn {
