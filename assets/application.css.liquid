.hero-section {
    display: flex;
    overflow: hidden;
    flex-direction: column;

    position: relative;
    z-index: 1;

    padding: 5px;

    min-width: 300px;
}

.hero-info {
    position: absolute;
    padding: 10px;

    max-width: 500px;

    align-self: center;

    font-family: "Cabin", sans-serif;

    margin-top: 150px;

    
}

.hero-image {
    width: 100%;
    min-width: 1200px;
    max-width: 1200px;
    max-height: 524px;

}

.hero-button {
    width: 35%;
    height: 45px;

    box-shadow: 0px 0px 0px 1px rgba(165, 154, 154, 0.38);
    border-radius: 8px;
}

.image_item {
  width: 35%;
  border-radius: 50%;

  box-sizing: border-box;

  max-width: 170px;

  padding: 5px;

  

}

.flex-image{
    width: 100%;
}

.image-menu-container {
    display: flex;
    flex-wrap: wrap;

    justify-content: center;
    justify-content: space-around;

    font-family: "Cabin", sans-serif;
    text-align: center;
}

.image-menu-title {
    font-size: 15px;
    margin: 0px;
}

.image-menu-description{
    font-size: 10px;
    margin: 0;
}

.menu-image{
    border-radius: 50%;
    width: 100%;

    height: 170px;
    width: 120px;

    margin: 5px;
}

.showcase-image{
    border-radius: 50%;
    height: 325px;
}

.showcase-info-container {
    max-width: 342px;

    display: flex;
    justify-content: space-between;
    flex-direction: column;

    padding: 5px;

    font-family: "Cabin", sans-serif;
}

.showcase-row {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    justify-content: center;
    justify-content: space-around;
}


