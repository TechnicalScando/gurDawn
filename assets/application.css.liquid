.header {
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.dropbtn {
    padding: 16px;
}

.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f1f1f1;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
    z-index: 1;
}

.dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

.dropdown-content a:hover {
    background-color: #ddd;
}

.dropdown:hover .dropdown-content {
    display: block;
}

.dropdown:hover .dropbtn {
    background-color: #3e8e41;
}

.image_item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
   
    width: 25%;
    margin: 5px;


   
}

.image-menu-container {
    display: flex;
    padding: 5px;

    margin-top: 30px;
}

.menu-item-title{
    text-align: center;
}

.flex-image{
    max-width: 100%;
}

.showcase-container{
    margin-top: 20px;
}

.showcase-row{
    display: flex;
    flex-direction: row;

    justify-content: center;

    padding: 5px;
}

.showcase-info-container{
    margin: 5px;

