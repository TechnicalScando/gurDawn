        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}

</section>

{% schema %}
    {
  "name": "Hero",
  "class": "hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Hero"
    }
  ]
}
{% endschema %}